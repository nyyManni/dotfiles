    timeout 2400 'swaymsg "output * power off"' \
    resume 'swaymsg "output * power on"' \
    timeout 30 'if pgrep swaylock; then swaymsg "output * power off"; fi' \
    resume 'if pgrep swaylock; then swaymsg "output * power on"; fi' \
    before-sleep $lock


